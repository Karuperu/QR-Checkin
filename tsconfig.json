{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "ui/FacultyVacationApprovalPage.tsx", "ui/HomePage.tsx", "ui/ProjectAttendancePage.tsx", "ui/ProjectManagementPage.tsx", "ui/QRGeneratorPage.tsx", "ui/StatsPage.tsx", "ui/StudentAttendancePage.tsx", "ui/VacationRequestPage.tsx", "ui/WorkTimeSettingsPage.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
} 